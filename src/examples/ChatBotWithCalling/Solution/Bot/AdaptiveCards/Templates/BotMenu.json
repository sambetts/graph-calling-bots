{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Meeting coordinator Bot"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "${creator.profileImage}",
              "size": "Small",
              "style": "Person"
            }
          ],
          "width": "auto"
        }
      ]
    },
    /*meeting numbers and status*/,
    {
      "type": "TextBlock",
      "text": "Create meeting for these people",
      "wrap": true
    }
  ],

  "actions": /*actions*/,
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}
