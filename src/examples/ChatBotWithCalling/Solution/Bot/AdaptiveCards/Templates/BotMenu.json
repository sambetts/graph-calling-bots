{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "spacing": "None",
          "items": [
            {
              "type": "TextBlock",
              "wrap": true,
              "text": "\"${BotName}\""
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Hi, I'm the \"${BotName}\". You have been added to the training courses below. As part of this program, I will send you some messages to help you get started.",
      "size": "Medium",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Questions, contact learning coordinator",
      "wrap": true
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "title": "Contact Learning coordinator"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}