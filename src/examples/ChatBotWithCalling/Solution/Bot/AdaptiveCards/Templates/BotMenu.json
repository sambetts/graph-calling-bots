{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Meeting coordinator Bot"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "${creator.profileImage}",
              "size": "Small",
              "style": "Person"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Meeting Info",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "spacing": "None",
              "text": "${MeetingInfo}",
              "isSubtle": true,
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    /*meeting numbers and status*/,
    {
      "type": "TextBlock",
      "text": "Create a meeting, then add external numbers to join",
      "wrap": true
    }
  ],

  "actions": [ /*actions*/ ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.3"
}
